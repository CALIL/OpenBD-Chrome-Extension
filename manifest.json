{
  "name": "OpenBD Chrome Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This is an example for OpenBD API",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [
        "superagent.js",
        "api.js",
        "openbd.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "api.json"
  ],
  "permissions": [
    "background"
  ]
}
